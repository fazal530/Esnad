{#
/**
 * @file
 * Custom paragraph template for Hero Section with rotating text.
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}

      {% if paragraph.field_video.entity is not empty %}
        {% set media_type = paragraph.field_video.entity.bundle() %}
      {% endif %}

      <div class="{% if media_type == 'image' %}services-wrapper{% else %}hero-wrapper{% endif %}">
        <div class="hero-section">
          <div class="{% if media_type == 'image' %}hero-image{% else %}hero-video{% endif %}">
            {{ content.field_video }}
          </div>
          <div class="hero-text">
            {{ content.field_hero_text }}
          </div>
        </div>
      </div>

    {% endblock %}
  </div>
{% endblock paragraph %}
